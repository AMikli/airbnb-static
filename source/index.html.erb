  <!-- Your cards code -->
<div class="wrapper-grey">
  <div class="container">
    <div class="row">
      <% data.flats.each do |owner, flats| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path flats.card %>');">
            <div class="card-category">Popular</div>
            <div class="card-description">
              <h2><%= owner.capitalize %>'s flat</h2>
              <p>Very cool stuff, useful and smart</p>
            </div>
            <%= image_tag flats.owner_picture, class: "card-user avatar" %>
            <%= link_to "", "flats/#{owner}.html", class: "card-link" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
  <!-- Your newsletter code -->
  <div class="newsletter">
    <h2 class= "text-center">Get news from us</h2>
    <form action="#" class="text-center">
      <label for="your-email">Your email</label>
      <input type="email" id="your-email" placeholder="email@exemple.com">
      <input type="submit" value="Sign In" class="btn btn-primary">
    </form>
  </div>
  <!-- Your map code -->
  <div id="map" style="width: 100%; height: 400px;"></div>

  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>

  <script type="text/javascript">
    var myLatlng = new google.maps.LatLng(48.8655909, 2.378983);

    var myOptions = {
      zoom: 16,
      center: myLatlng,
      scrollwheel: false,
      mapTypeId: google.maps.MapTypeId.ROADMAP,
      styles: []
    };

    var map = new google.maps.Map(document.getElementById('map'), myOptions);
    var marker = new google.maps.Marker({
      position: myLatlng,
      map: map,
      title: "You are here!"
    });
  </script>

